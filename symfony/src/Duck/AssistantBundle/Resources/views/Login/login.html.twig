{% extends 'DuckAssistantBundle::base.html.twig' %}

{% block title %}Zaloguj siÄ™{% endblock %}
{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData) }}</div>
    {% endif %}
<div class="container">
    <div class="row">
        <div class="form-group">
    <form action="{{ path('login_check') }}" method="post" >
        <label for="username">Username:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" /><br>

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" class="form-control" />

        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}
        <br>

        <button type="submit" class="btn btn-success">Login</button>
    </form>
{% endblock %}


