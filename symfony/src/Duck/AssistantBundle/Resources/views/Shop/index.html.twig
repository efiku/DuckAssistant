{% extends 'DuckAssistantBundle::base.html.twig' %}
{% block title %}Sklepy{% endblock %}
{% block body %}
<h1>Lista Sklepów
    {% if  is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="{{ path('duck_assistantBundle_Shop_add') }}"><button class="btn btn-primary">Dodaj Sklep</button></a>
    {% endif %}

</h1>
<div class="col-md-12">

<table class="table">
    <thead>
        <th>#</th>
        <th>Nazwa</th>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <th>Akcja:</th>
        {% endif %}
    </thead>


{% for Shops in list %}
    <tr>
        <td>{{ Shops.id }}</td>
        <td>{{ Shops.name}}</td>

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <td>
                <a class="label label-primary" href="{{ path('duck_assistantBundle_Shop_edit', {'id': Shops.id }) }}">Edytuj</a> &nbsp;
                <form action="{{ path('duck_assistantBundle_Shop_del', {'id':  Shops.id }) }}" method="post"> <button type="submit" class="label label-primary"> Usuń </button></form>
            </td>
               {% endif %}

    </tr>
{% endfor %}
</table>
</div>
{% endblock %}
