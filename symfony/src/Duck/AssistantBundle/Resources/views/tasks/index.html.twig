        <td>{{ Task.content }}</td>
        <td>{{ Task.date|date("d-m-Y") }}</td>
        <td>{{ Task.dueDate|date("d-m-Y")  }}</td>
        <td>{{ Task.done }}?</td>
        <td>{{ Task.createAt|date("d-m-Y") }}</td>
        <td>{{ Task.priority  }}</td>
        <td>{{ Task.createdBy.getName  }}</td>
        <td>{{ Task.assignee.getName }}</td>
        <td>{{ Task.category.getName }}</td>
    </tr>
{% endfor %}
</table>
{% endblock %}
